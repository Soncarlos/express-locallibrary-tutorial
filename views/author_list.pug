extends layout

block content

   h1 #{title}

   ul
      each author in author_list    
         li
            a(href= author.url) #{author.name} 
            | #{author.lifespan}
            a(href=author.url+'/delete') Delete - 
            a(href=author.url + '/update') Update
      else 
         li There are no Author in the DataBase.